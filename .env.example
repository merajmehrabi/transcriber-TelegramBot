# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Google Cloud Configuration
GOOGLE_APPLICATION_CREDENTIALS=path_to_your_google_credentials.json

# Bot Settings
MAX_AUDIO_SIZE=20971520  # 20MB in bytes
DEFAULT_LANGUAGE=en      # Default language (en, fa, sv)

# Whitelist Configuration
WHITELIST_ENABLED=true
ADMIN_USER_ID=your_telegram_user_id_here
TELEGRAM_USER_WHITELIST=user_id1,user_id2,user_id3  # Comma-separated list of allowed user IDs

# Group Chat Settings
GROUP_COMMANDS_ONLY=true  # Only respond to commands in groups
GROUP_ALLOWED_COMMANDS=start,help,language  # Comma-separated list of allowed commands in groups

# Debug Configuration
DEBUG_MODE=false         # Set to true to enable debug logging
LOG_LEVEL=info          # Log levels: debug, info, warn, error

# Optional Services
PROOFREADING_API_KEY=your_proofreading_api_key_here
